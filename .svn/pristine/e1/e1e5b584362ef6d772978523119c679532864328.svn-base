@model  WBT.DLCustomerCreation.DLSubCategoryCreation


@using (Ajax.BeginForm("Save", "Category", null, new AjaxOptions
{
    UpdateTargetId = "divList",
    OnSuccess = "onCreateSuccess_Ajax",
    HttpMethod = "post",
    LoadingElementId = "progress"
}, new { @class = "form-sample" }))
{
    @Html.AntiForgeryToken()

    <!-- Main content -->
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Category Creation</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <!-- form start -->

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group ">
                                <label>Category </label>
                                <div>
                                    @Html.EditorFor(model => model.SubCategoryName, new { htmlAttributes = new { @class = "form-control ", @required = "Required", @placeholder = "Category Name", @maxlength = "50", @autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.SubCategoryName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Group </label>
                                <div class="input-group">
                                    @Html.DropDownListFor(model => model.CategoryID, (SelectList)ViewBag.CatgList, "Select Group", new { @class = "form-control listbox" })
                                </div>
                                @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </div>

                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
}

@section scripts {
    <script>
        $.validator.unobtrusive.parse(document);
    </script>
}
