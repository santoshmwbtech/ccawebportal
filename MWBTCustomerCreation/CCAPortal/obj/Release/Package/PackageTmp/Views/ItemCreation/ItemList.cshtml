@model IEnumerable<WBT.DLCustomerCreation.DLItemCreation>

<div class="row">
    <div class="col-12">
        <div>
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title"> Item List </h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i></button>
                    </div>
                </div>
                <div class="card-body">
                    <div>
                        <table class="table table-bordered table-striped" id="dataGrid">
                            <thead>
                                <tr>
                                    <th> Item Name </th>
                                    <th> Item Code </th>
                                    <th class="notexport"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.Count() > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.HiddenFor(Model => item.ID)
                                                    @Html.HiddenFor(Model => item.ItemCode)
                                                    @item.ItemName
                                                </td>
                                                <td>
                                                    @item.ItemCode
                                                </td>
                                                <td>
                                                    @Ajax.ActionLink("Edit", "Edit", "ItemCreation", new { ItemCode = item.ItemCode }, new AjaxOptions { UpdateTargetId = "divCreate", HttpMethod = "get", OnComplete = "Ajax_OnComplete", OnFailure = "Ajax_Edit_Failure", OnSuccess = "onEditSuccess", LoadingElementId = "progress" }, new { @class = "btn btn-danger btn-xs" })
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

