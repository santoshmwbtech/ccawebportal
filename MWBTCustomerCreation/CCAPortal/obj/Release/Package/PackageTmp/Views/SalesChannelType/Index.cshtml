        function ChannelTypeChanged() {
            var ChannelType = $('#ChannelType').val();
            $("#progress").show();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("CheckDuplicateChannelType", "SalesChannelType")',
                dataType: "json",
                data: { ChannelType: ChannelType},
                success: function (response) {
                    if (response != "success") {



                     Swal.fire({
                         title: 'Not Allowed',
                         text: response,
                            icon: 'error',
                        }).then((result) => {
                            $('#ChannelType').val('');
                                $('#ChannelType').focus();
                                $("#progress").hide();
                                return false;
                        });
                        //swal("Not Allowed", response, "error");

                    }
                    $("#progress").hide();
                },
                error: function () {
                }
            });
        }
    </script>

