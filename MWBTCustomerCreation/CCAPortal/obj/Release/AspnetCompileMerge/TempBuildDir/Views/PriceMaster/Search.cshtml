@model CCAPortal.Models.Search


<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Filter Options</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>Group</label>
                    <div class="input-group">
                        @Html.DropDownListFor(model => model.BranchList, (SelectList)ViewBag.BranchList, new { @class = "form-control listbox", @onchange = "GroupChanged()" })
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Category</label>
                    <div class="input-group">
                        @Html.DropDownListFor(model => model.BranchList, (SelectList)ViewBag.BranchList, new { @class = "form-control listbox", @onchange = "GroupChanged()" })
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Item Name</label>
                    @Html.TextBoxFor(a => a.ToDate, null, new { @class = "form-control", @autocomplete = "off" })
                </div>
            </div>
        </div>
    </div>
</div>

