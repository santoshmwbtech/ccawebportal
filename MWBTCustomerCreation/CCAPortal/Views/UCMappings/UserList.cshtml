@model List<WBT.DLCustomerCreation.UserDetails>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title"> Marketing  / Channel Partner Mapping List </h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i></button>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-striped" id="dataGrid">
                                @*dataGrid*@
                                <thead>
                                    <tr>
                                        <th class="text-center">
                                            Name
                                        </th>
                                        <th class="text-center">
                                            Marketing / Channel Partner
                                        </th>
                                        <th class="noExport text-center">@Html.CheckBox("CheckAll", false, new { id = "select_all" })</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        int j = 0;
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="text-center">
                                                    @Html.HiddenFor(a => a[j].ID)
                                                    @Html.HiddenFor(a => a[j].ChannelPartnerID)
                                                    @Html.TextBoxFor(a => a[j].Name, new { @style = "border:none;width:100%;", @class = "forom-control", @reeadonly = "readonly" })
                                                </td>
                                                <td class="text-center">
                                                    @Html.TextBoxFor(a => a[j].UCType, new { @style = "border:none;width:100%;", @class = "forom-control", @reeadonly = "readonly" })
                                                </td>
                                                <td class="text-center">
                                                    @Html.CheckBoxFor(a => a[j].IsChecked, new { @class = "chkselect" })
                                                </td>
                                            </tr>
                                            j++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
