@model WBT.DLCustomerCreation.Settings


@{
    ViewBag.Title = "Configuration Settings";
}

<section class="content">
    <div class="container-fluid">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Configuration Settings</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                @using (Ajax.BeginForm("Update", "Settings", null, new AjaxOptions
                {
                    OnSuccess = "onSuccess_Ajax",
                    HttpMethod = "post",
                    LoadingElementId = "progress"
                }, new { @class = "form-sample" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email ID</label>
                                @Html.EditorFor(model => model.MarketingEmailID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email ID", @maxlength = "50" } })
                                @Html.HiddenFor(model => model.ID)
                                @Html.HiddenFor(model => model.CreatedBy)
                                @Html.HiddenFor(model => model.CreatedDate)
                                @Html.ValidationMessageFor(model => model.MarketingEmailID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>EMail Password</label>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password", @maxlength = "50", @type = "password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Mail Host</label>
                                @Html.EditorFor(model => model.MailHost, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mail Host", @maxlength = "50" } })
                                @Html.ValidationMessageFor(model => model.MailHost, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Sending Port</label>
                                @Html.EditorFor(model => model.SendingPort, new { htmlAttributes = new { @class = "form-control", @placeholder = "Sending Port", @maxlength = "50" } })
                                @Html.ValidationMessageFor(model => model.SendingPort, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Enable SSL</label>
                                <div class="input-group">
                                    @Html.DropDownListFor(model => model.EnableSsl, (SelectList)ViewBag.SSL, new { @class = "form-control listbox" })
                                </div>
                                @Html.ValidationMessageFor(model => model.EnableSsl, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>SMS API Key</label>
                                @Html.EditorFor(model => model.SMSAPIKey, new { htmlAttributes = new { @class = "form-control", @placeholder = "SMS API Key", @maxlength = "500" } })
                                @Html.ValidationMessageFor(model => model.SMSAPIKey, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Base URL (Transactional)</label>
                                @Html.EditorFor(model => model.TransactionalBaseURL, new { htmlAttributes = new { @class = "form-control", @placeholder = "Base URL", @maxlength = "500" } })
                                @Html.ValidationMessageFor(model => model.TransactionalBaseURL, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Base URL (Promotional)</label>
                                @Html.EditorFor(model => model.PromotionalBaseURL, new { htmlAttributes = new { @class = "form-control", @placeholder = "Base URL", @maxlength = "500" } })
                                @Html.ValidationMessageFor(model => model.PromotionalBaseURL, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Sender ID (Transactional Messages)</label>
                                @Html.EditorFor(model => model.TansactionalSenderID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Sender ID (Transaction Messages)", @maxlength = "50" } })
                                @Html.ValidationMessageFor(model => model.TansactionalSenderID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Sender ID (Promotional Messages)</label>
                                @Html.EditorFor(model => model.PromotionalSenderID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Sender ID (Promotional Messages)", @maxlength = "50" } })
                                @Html.ValidationMessageFor(model => model.PromotionalSenderID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Sales Order Register</label>
                                @Html.EditorFor(model => model.SORegister, new { htmlAttributes = new { @class = "form-control", @placeholder = "Sales Order Register", @maxlength = "500" } })
                                @Html.ValidationMessageFor(model => model.SORegister, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Group</label>
                                @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Group", @maxlength = "500" } })
                                @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                    @Html.CheckBoxFor(model => model.AutoSyncTally, new { @class = "custom-control-input", @id = "autoSyncTallySwitch" })
                                    <label class="custom-control-label" for="autoSyncTallySwitch">Auto Sync to Tally (Only SO)</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="custom-control custom-switch custom-switch-off-primary custom-switch-on-primary">
                                    @Html.CheckBoxFor(model => model.PriceSyncType, new { @class = "custom-control-input", @id = "taxBifurcSwitch" })
                                    <label class="custom-control-label" for="taxBifurcSwitch">SO Tally Sync with exclusive price</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary" id="btnUpdate">Update</button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<div id="progress" class="modal">
    <div class="center" style="margin: 0px; padding: 0px; position: fixed; right: 0px; top: 0px; width: 100%; height: 100%; background-color: rgb(102, 102, 102); z-index: 30001; opacity: 0.8;">
        <p style="position: absolute; color: White; top: 50%; left: 45%;">
            Loading, please wait... <img src="~/images/loading.gif" height="100" width="100" />
        </p>
    </div>
</div>

@section scripts{
    <script>
        $(".form-sample").validate();
    </script>
    <script>
        function onSuccess_Ajax(data) {
            swal.fire(data);
        }
    </script>
}
