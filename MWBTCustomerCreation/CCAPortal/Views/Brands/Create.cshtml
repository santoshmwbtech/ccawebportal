@model WBT.DLCustomerCreation.Brands
@using (Ajax.BeginForm("Save", "Brands", null, new AjaxOptions
{
    OnSuccess = "onCreateSuccess_Ajax",
    HttpMethod = "post",
    LoadingElementId = "progress"
}, new { @class = "form-sample" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Brands Master</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Brand Name </label>
                                @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Brand Name", @autocomplete = "off", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Select Brand Manufacturer </label>
                                <div class="input-group">
                                    <div class="input-group">
                                        @Html.DropDownListFor(model => model.ItemCompanyID, (SelectList)ViewBag.ItemCompanies, "Select Brand Manufacturer", new { @class = "form-control listbox", @required = "required" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ItemCompanyID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group" style="margin-top:40px;">
                                <label> @Html.CheckBoxFor(a => a.IsActive, new { @checked = "checked" })  Is Active</label>
                                <label> @Html.CheckBoxFor(a => a.IsTrademarkRegistered, new { @checked = "checked" })  Registered Brand</label>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $.validator.unobtrusive.parse(document);
</script>

