@model IEnumerable<WBT.DLCustomerCreation.DebtorsDetails>
@{
    ViewBag.Title = "Debtor Groups";
}

<div class="main-panel" id="MainDiv">
    <div class="row">
        @Html.Hidden("HID")
        <div class="col-12 grid-margin">
            <div id="divCreate">
                @*class="card-body"*@
                @Html.Action("Create")
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 grid-margin">
            <div id="divList">
                @*class="card-body"*@
                @Html.Action("DebtorList")
            </div>
        </div>
    </div>
</div>

<div id="progress" class="modal">
    <div class="center" style="margin: 0px; padding: 0px; position: fixed; right: 0px; top: 0px; width: 100%; height: 100%; background-color: rgb(102, 102, 102); z-index: 30001; opacity: 0.8;">
        <p style="position: absolute; color: White; top: 45%; left: 45%;">
            <span>Loading items, Please wait...</span> <img src="~/images/loading.gif" height="100" width="100" />
        </p>
    </div>
</div>

@section scripts {

    <script>
    function onCreateSuccess_Ajax(data) {
        if (data.Message == "success") {
            Swal.fire({
                title: 'Success!!',
                text: 'Debtor Group Saved Successfully',
                icon: 'success',
            }).then((result) => {
                $("#HID").val(data.ID);
                $("#btnCreate").hide();
                $("#btnTally").show();
                $("#btnCancel").show();
                $("#divList").load('@Url.Action("DebtorList", "Debtors")');
                setTimeout(function () {
                    $("#dataGrid").dataTable().fnDestroy();
                    loadDataTableWithButtons();
                }, 1000);

            });
        }
        else {
            Swal.fire({
                title: 'Error',
                text: data.Message,
                icon: 'error',
            }).then((result) => {
                $("#HID").val(data.ID);
                $("#btnCreate").hide();
                $("#btnTally").show();
                $("#btnCancel").show();
                $("#divList").load('@Url.Action("DebtorList", "Debtors")');
                setTimeout(function () {
                    $("#dataGrid").dataTable().fnDestroy();
                    loadDataTableWithButtons();
                }, 1000);
            });
        }
    }
    function onEditSuccess_Ajax(data) {
        if (data.Message == "success") {
            Swal.fire({
                title: 'Success!!',
                text: 'Debtor Group Updated Successfully',
                icon: 'success',
            }).then((result) => {
                $("#HID").val(data.ID);
                $("#btnUpdate").hide();
                $("#btnTally").show();
                $("#btnCancel").show();
                $("#divList").load('@Url.Action("DebtorList", "Debtors")');
                setTimeout(function () {
                    $("#dataGrid").dataTable().fnDestroy();
                    loadDataTableWithButtons();
                }, 1000);
            });
        }
        else {
            Swal.fire({
                title: 'Error',
                text: data.Message,
                icon: 'error',
            }).then((result) => {
                $('#divCreate').load('@Url.Action("Create","Debtors")');
                $("#divList").load('@Url.Action("DebtorList", "Debtors")');
                setTimeout(function () {
                    $("#dataGrid").dataTable().fnDestroy();
                    loadDataTableWithButtons();
                }, 1000);
            });
        }
        }
        function onDeleteSuccess(data) {
            if (data.url) {
                window.location = '@Url.Action("Index", "Login")';
            }
            Swal.fire({
                text: data,
            }).then((result) => {
                $("#divList").load('@Url.Action("DebtorList", "Debtors")');
                setTimeout(function () {
                    $("#dataGrid").dataTable().fnDestroy();
                    loadDataTableWithButtons();
                }, 1000);
            });
        }
    function onBegin_Ajax(data) {
    }
    function onFailure_Ajax() {
        Swal.fire({
            title: 'Success!!',
            text: 'Please try again later',
            icon: 'success',
        }).then((result) => { });
    }
    function Ajax_Edit_Failure(xhr, statusDescription) {
        //swal(xhr.statusDescription);
        Swal.fire({
            title: 'Success!!',
            text: xhr.statusDescription,
            icon: 'success',
        }).then((result) => { });
    }
    function onEditSuccess() {
        $("#DebtorName").focus();
        LoadListBox();
        document.getElementById("btnTally").style.display = "none";
        //document.getElementById("btnCancel").style.display = "none";
    }
    function onEditCompleteCreate_Ajax() {

    }
    function Ajax_OnComplete() {

    }
    function onSaveCompleteCreate_Ajax() {

    }
    $(document).ready(function () {
        document.getElementById("btnTally").style.display = "none";
        document.getElementById("btnCancel").style.display = "none";
    });
    </script>
    <script>
    function btnCancel_Click() {
        $('#divCreate').load('@Url.Action("Create","Debtors")');
        setTimeout(function () {
            document.getElementById("btnTally").style.display = "none";
            document.getElementById("btnCancel").style.display = "none";
        }, 1000);
    }
    function LoadListBox() {
        $('.listbox').multiselect({
            includeSelectAllOption: true,
            enableFiltering: true,
            enableCaseInsensitiveFiltering: true,
            maxHeight: 450,
        });
    }
    function TallySync() {
        var ID = $("#HID").val();
        $.ajax({
                url: '@Url.Action("TallySync", "Debtors")',
                data: "{ 'ID': '" + ID + "'}",
                dataType: "json",
                type: "POST",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data == "0") {
                        window.location = '@Url.Action("Index", "Login")';
                    }
                    else if (data == "1") {
                        swal.fire("Please install the service and open tally software, wait for 10 seconds and click on Tally Sync button again");
                    }
                    else {
                        if (data == "Tally Sync Successful!!") {
                            Swal.fire({
                                title: 'Success!!',
                                text: 'Tally Sync Successful!!',
                                icon: 'success',
                            }).then((result) => {
                                window.location = '@Url.Action("Index", "Debtors")';
                            });
                        }
                        else {
                            swal.fire(data);
                        }
                    }
                },
                error: function (response) {
                    swal.fire(response.responseText);
                },
                failure: function (response) {
                    swal.fire(response.responseText);
                }
            });
    }
    </script>
    <script>        
        jQuery(document).ready(function ($) {
            loadDataTableWithButtons();
        });
    </script>

}