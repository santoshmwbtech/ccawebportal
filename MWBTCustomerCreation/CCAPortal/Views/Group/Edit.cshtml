@model WBT.DLCustomerCreation.DLCategoryCreation
@using (Ajax.BeginForm("UpdateGroup", "Group", null, new AjaxOptions
{
    UpdateTargetId = "divList",    
    OnSuccess = "onEditSuccess_Ajax",
    HttpMethod = "post",
    LoadingElementId = "progress"
}, new { @class = "form-sample" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.OrgID)
    @Html.HiddenFor(model => model.AccOrInv)
    @Html.HiddenFor(model => model.IsTallyUpdated)
    @Html.HiddenFor(model => model.TallyUpdatedDate)
    @Html.HiddenFor(model => model.CreatedByID)
    @Html.HiddenFor(model => model.CreatedDate)
    @Html.HiddenFor(model => model.ModifiedByID)
    @Html.HiddenFor(model => model.ModifiedDate)
    @Html.HiddenFor(model => model.IsActive)
    <div>
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title"> Update Group </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i></button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div id="maindiv">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Group Name </label>
                                <div>
                                    @Html.HiddenFor(model => model.CategoryID)
                                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Under </label>
                                <div class="input-group">
                                    @Html.DropDownListFor(model => model.ParentCatId, (SelectList)ViewBag.CatgList, "Select Under", new { @class = "form-control listbox" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="card-footer">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary" id="btnUpdate">Update</button>
                        @*<a href="javascript:void(0)" onclick="TallySync();" class="btn btn-success" id="btnTally">Sync To Tally</a>
                            <a href="#" id="btnCancel" class="btn btn-danger" onclick="btnCancel_Click()">Cancel</a>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
}