@model IEnumerable<WBT.DLCustomerCreation.TallySyncErrorDTO>

<div class="row">
    <div class="col-12">
        <div>
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title"> Tally Sync Errors List </h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i></button>
                    </div>
                </div>
                <div class="card-body">
                    <div>
                        <table class="table table-bordered table-striped" id="dataGrid">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th> Tally Sync Type </th>
                                    <th> Details </th>
                                    <th> Error Message </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.Count() > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @item.CreatedDateStr
                                                </td>
                                                <td>
                                                    @item.TallySyncType
                                                </td>
                                                <td>
                                                    @item.TallySyncDetails
                                                </td>
                                                <td>
                                                    @item.ErrorMsg
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
