        }
        else {
            Swal.fire({
                title: 'Error',
                text: data.Message,
                icon: 'error',
            }).then((result) => {
                $('#divCreate').load('@Url.Action("Create", "TaxLegdersMaster")');
                $("#divList").load('@Url.Action("TaxLedgerList", "TaxLegdersMaster")');
                setTimeout(function () {
                    $("#dataGrid").dataTable().fnDestroy();
                    loadTable();
                }, 1000);
            });
        }
        }
