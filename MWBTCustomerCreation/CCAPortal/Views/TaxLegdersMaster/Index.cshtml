@model IEnumerable<WBT.DLCustomerCreation.DTOs.TaxLedgersDTO>
@{
    ViewBag.Title = "Tax Ledgers";
}

<div class="main-panel" id="MainDiv">
    <div class="row">
        @Html.Hidden("HID")
        <div class="col-12 grid-margin">
            <div id="divCreate">
                @*class="card-body"*@
                @Html.Action("Create")
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 grid-margin">
            <div id="divList">
                @*class="card-body"*@
                @Html.Action("TaxLedgerList")
            </div>
        </div>
    </div>
</div>

<div id="progress" class="modal">
    <div class="center" style="margin: 0px; padding: 0px; position: fixed; right: 0px; top: 0px; width: 100%; height: 100%; background-color: rgb(102, 102, 102); z-index: 30001; opacity: 0.8;">
        <p style="position: absolute; color: White; top: 45%; left: 45%;">
            <span>Loading items, Please wait...</span> <img src="~/images/loading.gif" height="100" width="100" />
        </p>
    </div>
</div>

@section scripts {

    <script>
    function onCreateSuccess_Ajax(data) {
        if (data.Message == "success") {
            Swal.fire({
                title: 'Success!!',
                text: 'Tax Ledger Group Saved Successfully',
                icon: 'success',
            }).then((result) => {
                $("#HID").val(data.ID);
                $("#btnCreate").hide();
                $("#btnTally").show();
                $("#btnCancel").show();
                $("#divList").load('@Url.Action("TaxLedgerList", "TaxLegdersMaster")');
                setTimeout(function () {
                    $("#dataGrid").dataTable().fnDestroy();
                    loadTable();
                }, 1000);
            });
            $("#HID").val(data.ID);
        }
        else {
            Swal.fire({
                title: 'Error',
                text: data.Message,
                icon: 'error',
            }).then((result) => {
                $("#HID").val(data.ID);
                $("#btnCreate").show();
                $("#btnTally").hide();
                $("#btnCancel").hide();
                $("#divList").load('@Url.Action("TaxLedgerList", "TaxLegdersMaster")');
                setTimeout(function () {
                    $("#dataGrid").dataTable().fnDestroy();
                    loadTable();
                }, 1000);
            });
        }
    }
    function onEditSuccess_Ajax(data) {
        if (data.Message == "success") {
